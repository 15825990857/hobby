<body class="login-img3-body">

    <div class="container">

        <form class="login-form" action="index.html">
            <div class="login-wrap">
                <p class="login-img"><i class="icon_lock_alt"></i></p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="icon_profile" id="userName"></i></span>
                    <input type="text" id="name" class="form-control" name="name" placeholder="Username" autofocus>
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="icon_key_alt" id="password"></i></span>
                    <input type="password" id="pwd" name="pwd" class="form-control" placeholder="Password">
                </div>
                <label class="checkbox">
                    <input type="checkbox" value="remember-me"> Remember me
                    <span class="pull-right"> <a href="#"> Forgot Password?</a></span>
                </label>
                <button class="btn btn-primary btn-lg btn-block" id="Login" type="button">Login</button>
                <button class="btn btn-info btn-lg btn-block" id="Signup" type="button">Signup</button>
            </div>
        </form>
         <div class="alert alert-danger alert-dismissible" style="width:20%;height:20px;margin:0px auto; text-align:center; line-height:10px;" role="alert" id="ts">
    </div>
    <script type="text/javascript">
        $(function ()
        {
            $('#ts').hide();
            $("#Login").click(function ()
            {
                LoginIn();
            })
        })
        function LoginIn()
        {
            if (IsNull("name"))
            {
                $("#ts").html("请输入用户名！").show();
                $("#name").focus();
                return false;
            }
           
            if (IsNull("pwd"))
            {
                $("#ts").html("请输入密码！").show();
                $("#pwd").focus();
                return false;
            }
            var data = {
                name:$('#name').val(),
                pwd:$('#pwd').val()
            }
            
            
            $.post("/Login/LoginIn", { name: $('#name').val(), pwd: $('#pwd').val() }, function (result)
            {
                if (result.status == '1')
                {
                    window.location.href="/Home/index"
                }
                else
                {
                    $("#ts").html(result.message).show();
                }
            })
        }
    </script>

</body>
